%h1 Afterschool Class List
%ul.nav.nav-list
  %li.divider

.row
  .span1#grade-links
    - @grade_levels.each do |grade|
      %span.label
        = link_to grade.year, grade_level_path(grade), method: :get, :remote => true, :grade_level_id => grade.id
      %br
  #grade-stats

%ul.nav.nav-list
  %li.divider

.row
  .span5
    %h3 Teacher
    %table.table.table-striped#student_table= render :partial => 'afterschool_class', :collection => @afterschool_class_by_grade_teacher
  .span5.current-status