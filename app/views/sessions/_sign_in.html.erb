<% if student.current_class_status(session.id) == "Late" %>
  <% btn_type = "btn-warning" %>
  <% status = "Late"  %>
  <% menu = "On time"%>
<% else %>
  <% btn_type = "btn-success" %>
  <% status = "On time"  %>
  <% menu = "Late"%>
<% end %>

<div class ='btn-group' student_id=<%= student.id %>>
  <a class='btn btn-mini <%= btn_type %> dropdown-toggle' data-toggle = 'dropdown' href = '#'>
    <%= status %>
    <span class='caret'></span>
  </a>
  <ul class='dropdown-menu'>
    <li>
      <%= link_to menu, attendance_path(student.find_session_attendance(session.id), attendance: {status: menu, student_id: student.id}), method: :put, remote: :true %>
    </li>
    <li>
      <%= link_to "Absent", attendance_path(student.find_session_attendance(session.id)), method: :delete, remote: true %>
      </li>
      </ul>
</div>